<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#C0C0C0">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Pay Rent"
        android:textColor="#044E47"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="35sp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/client_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Name"
            android:padding="10dp"
            android:textColor="#044E47"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/client_name_edit"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textSize="20sp"
            android:textColorHint="#044E47"
            android:background="@drawable/corner1"
            android:hint="  Enter Your Name" />

        <TextView
            android:id="@+id/client_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Phone No."
            android:padding="10dp"
            android:textColor="#044E47"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/client_phone_edit"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textSize="20sp"
            android:textColorHint="#044E47"

            android:background="@drawable/corner1"

            android:hint="  Enter Your Phone" />

        <TextView
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Email"
            android:padding="10dp"
            android:textColor="#044E47"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/city_edit"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textSize="20sp"
            android:textColorHint="#044E47"

            android:background="@drawable/corner1"
            android:hint="  Enter Email"
            />

        <TextView
            android:id="@+id/moving_From"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Property Owner Name"
            android:textColor="#044E47"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/moving_from_edit"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textSize="20sp"
            android:textColorHint="#044E47"
            android:background="@drawable/corner1"

            android:hint="  Enter Owner Name" />

        <TextView
            android:id="@+id/Mmving_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Property Owner Phone"
            android:padding="10dp"
            android:textColor="#044E47"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/moving_to_edit"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textSize="20sp"
            android:textColorHint="#044E47"
            android:background="@drawable/corner1"
            android:hint="  Property Owner Phone" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#044E47"
        android:padding="10dp"
        >


        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/corner1"
            android:layout_weight="1"
            android:text="Button" />

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/corner1"
            android:layout_gravity="bottom"
            android:padding="5dp"
            android:layout_weight="1"
            android:text="Button" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/corner1"
            android:layout_gravity="bottom"
            android:padding="5dp"
            android:layout_weight="1"
            android:text="Button" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/corner1"
            android:layout_gravity="bottom"
            android:padding="5dp"
            android:layout_weight="1"
            android:text="Button" />
    </LinearLayout>
